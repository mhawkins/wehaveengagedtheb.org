!!!
%html{html_attrs}
  %head
    %title= @title || SiteConfig.title
    %link{:href => '/stylesheets/application.css', :rel => 'stylesheet', :type => 'text/css'}
    %script{:src => '/javascripts/jquery-1.3.1.min.js', :type => 'text/javascript'}
    %script{:src => '/javascripts/jquery.timers.js', :type => 'text/javascript'}
    %script{:src => '/javascripts/application.js', :type => 'text/javascript'}
  %body
    #container
      #header
        #logo
          %h1
            %a{:href => '/'}= SiteConfig.title
      #content= yield
      #push
    #footer
      %p#legal= "&mdash; This is a <a href='http://twitter.com'>Twitter</a> application. It was created by #{profile_link(SiteConfig.author)} &mdash;"
